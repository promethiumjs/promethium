  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "test": "vitest --ui",
    "coverage": "vitest run --coverage && tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promethiumjs/promethium.git"
  },
