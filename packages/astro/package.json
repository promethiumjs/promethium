    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bugs": {
    "url": "https://github.com/promethiumjs/promethium/issues"
  },
  "homepage": "https://github.com/promethiumjs/promethium#readme",
  "keywords": [
    "frontend",
    "ui",
    "lit-html",
    "lit",
    "framework",
    "typescript"
  ],
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^1.1.0",
