{
  "name": "@promethium-js/adaptations",
  "description": "Adaptations for promethium-js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "check-types": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/promethiumjs/promethium.git"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bugs": {
    "url": "https://github.com/promethiumjs/promethium/issues"
  },
  "homepage": "https://github.com/promethiumjs/promethium#readme",
  "keywords": [
    "state management",
    "typescript"
  ],
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@vitest/ui": "^1.1.0",
    "vitest": "^1.1.0",
    "typescript": "^5.3.3"
  }
