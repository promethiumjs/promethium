{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "es6", "es2018", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true
  }
}
